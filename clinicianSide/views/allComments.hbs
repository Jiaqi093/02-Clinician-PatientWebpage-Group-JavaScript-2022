    <div class="wrapper">

        <div class="sidebar">
            <div class = "logo">
                <i class="iconify" data-icon="arcticons:diabetesm"></i>
            </div>
            <ul>
                <li><a a href="/clinician/home"> <i class="iconify" data-icon="ant-design:dashboard-outlined"></i>Dash Board</a></li>
                <li class = "current"><a href="#"><i class="iconify" data-icon="ooui:message"></i>Comments</a></li>
