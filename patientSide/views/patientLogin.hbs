<div class = "loginBGIMG">
        <div class="web-icon">
        <i class="iconify" data-icon="arcticons:diabetesm" style="height:200px;width:200px"></i>
    </div>

    <div class="slogan">
        <h1 >
            For a better tomorrow
        </h1>
    </div>


    
    <div class="login-page">

        <form class="login-form" action="/patient/login" method="POST">
            
            <label for="username">Email</label>
            <input type="text" name="email" placeholder="Enter your email" required/>
            
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Enter your password" required/>

            <div class = "loginPrompt">
                 {{#if loginMessage}} <p style = "text-align:center; color:#FF0000" > {{loginMessage}} </p> {{/if}}
            </div>

            <div class = "loginPageLogin">
                <a href="/home"><input type="submit" value="Log In"/></a>
            </div>

            <div class="link-pwd">
                <a href="/patient/aboutWebsite"> About website</a>
                <a href="/patient/aboutDiabetes"> About Diabetes</a>
              </div>
        
        </form>
      </div>

</div>

